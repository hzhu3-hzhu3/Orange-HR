@rendermode InteractiveServer
@using System.Security.Claims
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@inject SignInManager<HRManagement.Domain.Entities.Employee> SignInManager
<nav class="navbar-horizontal">
    <div class="navbar-container">
        <!-- Logo -->
        <div class="navbar-brand">
            <a href="/" class="brand-link">
                <span class="brand-icon">üçä</span>
                <span class="brand-text">Orange HR</span>
            </a>
        </div>
        <!-- Mobile Menu Toggle -->
        <button class="mobile-menu-toggle" @onclick="ToggleMobileMenu">
            <i class="bi @(mobileMenuOpen ? "bi-x" : "bi-list")"></i>
        </button>
        <!-- Navigation Links -->
        <div class="navbar-links @(mobileMenuOpen ? "mobile-open" : "")">
            <AuthorizeView>
                <Authorized>
                    <!-- Main Navigation -->
                    <div class="nav-group">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                            <i class="bi bi-speedometer2"></i>
                            <span>Dashboard</span>
                        </NavLink>
                        <NavLink class="nav-link" href="leave-requests">
                            <i class="bi bi-calendar-check"></i>
                            <span>My Leaves</span>
                        </NavLink>
                        <NavLink class="nav-link" href="leave-requests/new">
                            <i class="bi bi-plus-circle"></i>
                            <span>New Request</span>
                        </NavLink>
                        <NavLink class="nav-link" href="profile">
                            <i class="bi bi-person"></i>
                            <span>Profile</span>
                        </NavLink>
                        <!-- Manager Links -->
                        <AuthorizeView Roles="Manager,HR" Context="managerContext">
                            <NavLink class="nav-link" href="approvals">
                                <i class="bi bi-hourglass-split"></i>
                                <span>Approvals</span>
                            </NavLink>
                            <NavLink class="nav-link" href="team">
                                <i class="bi bi-people"></i>
                                <span>Team</span>
                            </NavLink>
                        </AuthorizeView>
                        <!-- HR Links -->
                        <AuthorizeView Roles="HR" Context="hrContext">
                            <NavLink class="nav-link" href="employees">
                                <i class="bi bi-people-fill"></i>
                                <span>Employees</span>
                            </NavLink>
                        </AuthorizeView>
                    </div>
                    <!-- User Actions -->
                    <div class="nav-actions">
                        <button class="btn btn-outline btn-sm" @onclick="Logout">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Logout</span>
                        </button>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="nav-actions">
                        <NavLink class="btn btn-primary btn-sm" href="login">
                            <i class="bi bi-box-arrow-in-right"></i>
                            <span>Login</span>
                        </NavLink>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</nav>
<style>
    .navbar-horizontal {
        background-color: var(--color-bg-primary);
        padding: 0;
    }
    .navbar-container {
        max-width: 1280px;
        margin: 0 auto;
        padding: 0 var(--spacing-6);
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 64px;
    }
    .navbar-brand {
        display: flex;
        align-items: center;
    }
    .brand-link {
        display: flex;
        align-items: center;
        gap: var(--spacing-2);
        text-decoration: none;
        color: var(--color-text-primary);
        font-weight: var(--font-weight-bold);
        font-size: var(--font-size-xl);
        transition: var(--transition-fast);
    }
    .brand-link:hover {
        color: var(--color-primary);
    }
    .brand-icon {
        font-size: 1.5rem;
        line-height: 1;
    }
    .brand-text {
        font-size: var(--font-size-xl);
    }
    .mobile-menu-toggle {
        display: none;
        background: none;
        border: none;
        font-size: 1.5rem;
        color: var(--color-text-primary);
        cursor: pointer;
        padding: var(--spacing-2);
    }
    .navbar-links {
        display: flex;
        align-items: center;
        gap: var(--spacing-2);
        flex: 1;
        justify-content: space-between;
        margin-left: var(--spacing-8);
    }
    .nav-group {
        display: flex;
        align-items: center;
        gap: var(--spacing-2);
    }
    .nav-actions {
        display: flex;
        align-items: center;
        gap: var(--spacing-2);
    }
    .nav-link {
        display: flex;
        align-items: center;
        gap: var(--spacing-2);
        padding: var(--spacing-2) var(--spacing-4);
        color: var(--color-text-secondary);
        text-decoration: none;
        font-size: var(--font-size-base);
        font-weight: var(--font-weight-normal);
        border-radius: var(--radius-sm);
        transition: var(--transition-fast);
        white-space: nowrap;
    }
    .nav-link:hover {
        color: var(--color-primary);
        background-color: var(--color-bg-surface);
    }
    .nav-link.active {
        color: var(--color-primary);
        font-weight: var(--font-weight-medium);
        background-color: rgba(37, 99, 235, 0.1);
    }
    .nav-link i {
        font-size: 1.125rem;
    }
    @@media (max-width: 1024px) {
        .navbar-container {
            padding: 0 var(--spacing-4);
        }
        .mobile-menu-toggle {
            display: block;
        }
        .navbar-links {
            position: fixed;
            top: 64px;
            left: 0;
            right: 0;
            background-color: var(--color-bg-primary);
            flex-direction: column;
            align-items: stretch;
            padding: var(--spacing-4);
            box-shadow: var(--shadow-lg);
            transform: translateY(-100%);
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease-in-out;
            margin-left: 0;
            gap: var(--spacing-2);
            max-height: calc(100vh - 64px);
            overflow-y: auto;
        }
        .navbar-links.mobile-open {
            transform: translateY(0);
            opacity: 1;
            visibility: visible;
        }
        .nav-group {
            flex-direction: column;
            align-items: stretch;
            width: 100%;
            gap: var(--spacing-1);
        }
        .nav-actions {
            flex-direction: column;
            align-items: stretch;
            width: 100%;
            padding-top: var(--spacing-4);
            border-top: 1px solid var(--color-border-light);
        }
        .nav-link {
            width: 100%;
            justify-content: flex-start;
        }
        .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>
@code {
    private bool mobileMenuOpen = false;
    private void ToggleMobileMenu()
    {
        mobileMenuOpen = !mobileMenuOpen;
    }
    private void Logout()
    {
        Navigation.NavigateTo("/Account/Logout", forceLoad: true);
    }
}
